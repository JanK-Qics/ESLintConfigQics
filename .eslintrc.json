{
    "rules": {
        "linebreak-style": ["warn", "windows"]
    },
    "overrides": [
        {
            "files": ["*.ts"],
            "parserOptions": {
                "project": ["tsconfig.json"],
                "createDefaultProgram": true
            },
            "extends": [
                "plugin:@angular-eslint/recommended",
                "plugin:@typescript-eslint/recommended-requiring-type-checking",
                "plugin:@angular-eslint/template/process-inline-templates",
                "plugin:import/recommended",
                "plugin:import/typescript",
                "plugin:rxjs/recommended"
            ],
            "plugins": ["unused-imports", "sort-class-members", "rxjs", "deprecation"],
            "rules": {
                "@angular-eslint/directive-selector": [
                    "error",
                    {
                        "type": "attribute",
                        "prefix": [""],
                        "style": "camelCase"
                    }
                ],
                "@angular-eslint/component-selector": [
                    "error",
                    {
                        "type": "element",
                        "prefix": [""],
                        "style": "kebab-case"
                    }
                ],
                "@angular-eslint/no-empty-lifecycle-method": "off",
                "max-len": ["warn", { "code": 150, "ignoreComments": true }],
                "import/order": [
                    "warn",
                    {
                        "groups": ["builtin", "external", "parent", "sibling", "index"],
                        "alphabetize": {
                            "order": "asc",
                            "orderImportKind": "asc",
                            "caseInsensitive": true
                        },
                        "newlines-between": "always",
                        "distinctGroup": true
                    }
                ],
                "no-useless-rename": "warn",
                "import/no-useless-path-segments": ["warn", { "noUselessIndex": true }],
                "import/no-unused-modules": [
                    "off",
                    {
                        "unusedExports": true,
                        "memberVariableDeclaration": true,
                        "parameter": true,
                        "propertyDeclaration": true
                    }
                ],
                "arrow-parens": ["warn", "always"],
                "camelcase": ["warn", {}],
                "no-invalid-this": ["error", {}],
                "no-var": ["warn"],
                "dot-location": ["warn", "property"],
                "newline-per-chained-call": ["warn", { "ignoreChainWithDepth": 3 }],
                "@typescript-eslint/typedef": [
                    "warn",
                    {
                        "arrowParameter": true,
                        "memberVariableDeclaration": true,
                        "parameter": true,
                        "propertyDeclaration": true
                    }
                ],
                "@typescript-eslint/explicit-function-return-type": "warn",
                "require-jsdoc": [
                    "warn",
                    {
                        "require": {
                            "FunctionDeclaration": true,
                            "MethodDefinition": true,
                            "ClassDeclaration": false,
                            "ArrowFunctionExpression": false,
                            "FunctionExpression": false
                        }
                    }
                ],
                "unused-imports/no-unused-imports": "warn",
                "sort-class-members/sort-class-members": [
                    "warn",
                    {
                        "order": [
                            "[static-properties]",
                            "[static-methods]",
                            "[conventional-private-properties]",
                            "[properties-private]",
                            "[properties-protected]",
                            "[properties-public]",
                            "constructor",
                            "[angular]",
                            "[accessor-pairs]",
                            "[methods-public]",
                            "[methods-protected]",
                            "[methods-private]",
                            "[everything-else]"
                        ],
                        "groups": {
                            "angular": [{ "name": "/ng.+/", "type": "method" }],
                            "properties-private": [{ "type": "property", "accessibility": "private" }],
                            "properties-protected": [{ "type": "property", "accessibility": "protected" }],
                            "properties-public": [{ "type": "property", "accessibility": "public" }],
                            "methods-private": [{ "type": "method", "accessibility": "private" }],
                            "methods-protected": [{ "type": "method", "accessibility": "protected" }],
                            "methods-public": [{ "type": "method", "accessibility": "public" }]
                        },
                        "accessorPairPositioning": "getThenSet"
                    }
                ],
                "lines-between-class-members": ["warn", "always"],
                "@typescript-eslint/explicit-member-accessibility": [
                    "warn",
                    {
                        "accessibility": "explicit",
                        "overrides": {
                            "constructors": "no-public",
                            "parameterProperties": "explicit",
                            "accessors": "explicit"
                        }
                    }
                ],
                "indent": "off",
                "@typescript-eslint/indent": ["warn", 4, { "SwitchCase": 1 }],
                "no-multi-spaces": "warn",
                "no-multiple-empty-lines": ["warn", { "max": 1, "maxEOF": 0, "maxBOF": 0 }],
                "eol-last": ["warn", "always"],
                "@typescript-eslint/type-annotation-spacing": ["warn", {}],
                "space-infix-ops": ["warn", {}],
                "object-curly-spacing": ["warn", "always"],
                "array-bracket-spacing": ["warn", "never"],
                "array-bracket-newline": ["warn", { "multiline": true }],
                "array-element-newline": ["warn", "consistent"],
                "brace-style": ["warn", "1tbs", { "allowSingleLine": true }],
                "object-curly-newline": [
                    "warn",
                    {
                        "multiline": true
                    }
                ],
                "object-property-newline": ["warn"],
                "space-in-parens": ["warn", "never"],
                "space-before-blocks": ["warn", "always"],
                "block-spacing": ["warn", "always"],
                "semi": ["warn", "always"],
                "prefer-const": "off",
                "@typescript-eslint/member-delimiter-style": "warn",
                "@typescript-eslint/no-unsafe-assignment": "off",
                "@typescript-eslint/no-unsafe-argument": "off",
                "@typescript-eslint/no-unsafe-call": "off",
                "@typescript-eslint/no-unsafe-member-access": "off",
                "@typescript-eslint/no-unsafe-return": "off",
                "@typescript-eslint/no-floating-promises": ["warn", { "ignoreVoid": true, "ignoreIIFE": true }],
                "@typescript-eslint/restrict-plus-operands": [
                    "warn",
                    { "checkCompoundAssignments": true, "allowAny": true }
                ],
                "@typescript-eslint/restrict-template-expressions": ["off"],
                "sort-keys": ["warn", "asc", { "caseSensitive": false, "natural": true }],
                "comma-dangle": [
                    "warn",
                    {
                        "arrays": "always-multiline",
                        "objects": "always-multiline",
                        "imports": "always-multiline",
                        "exports": "always-multiline",
                        "functions": "never"
                    }
                ],
                "comma-spacing": ["warn", {}],
                "quotes": ["warn", "double"],
                "keyword-spacing": ["warn", { "before": true, "after": true }],
                "arrow-spacing": ["warn", { "before": true, "after": true }],
                "key-spacing": ["warn", { "beforeColon": false, "afterColon": true, "mode": "strict" }],
                "space-before-function-paren": ["warn", "never"],
                "no-extra-semi": "warn",
                "deprecation/deprecation": "warn"
            },
            "settings": {
                "import/resolver": {
                    "typescript": true,
                    "node": true
                }
            }
        },
        {
            "files": ["*.html"],
            "extends": ["plugin:@angular-eslint/template/recommended"],
            "rules": {}
        },
        {
            "files": ["*.html"],
            "excludedFiles": ["*inline-template-*.component.html"],
            "extends": ["plugin:prettier/recommended"],
            "rules": {
                "prettier/prettier": [
                    "warn",
                    {
                        "parser": "angular",
                        "endOfLine": "auto",
                        "singleAttributePerLine": true,
                        "bracketSameLine": true,
                        "bracketSpacing": true,
                        "html-whitespace-sensitivity": "ignore",
                        "printWidth": 150
                    }
                ]
            }
        }
    ]
}